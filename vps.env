# Crypto Market - VPS Multi-App Configuration
# Copy this file to .env on your VPS

# Domain Configuration
VIRTUAL_HOST=cryptomarket.julianowicka.dev
LETSENCRYPT_HOST=cryptomarket.julianowicka.dev
LETSENCRYPT_EMAIL=admin@julianowicka.dev

# Application Configuration
NODE_ENV=production
PORT=3000

# CoinGecko API Configuration (optional - for higher rate limits)
# COINGECKO_DEMO_API_KEY=your_demo_key_here
# COINGECKO_PRO_API_KEY=your_pro_key_here

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=crypto-market

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40s

# Resource Limits
MEMORY_LIMIT=512M
CPU_LIMIT=0.5
MEMORY_RESERVATION=256M
CPU_RESERVATION=0.25
